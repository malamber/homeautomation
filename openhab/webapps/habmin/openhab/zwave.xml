<!-- Binding configuration for the Z-Wave binding in openHAB -->
<binding>
    <!-- Full name presented to the user -->
    <name>ZWAVE - Z-Wave Binding</name>
    <!-- PID name used within the OSGi layer -->
    <pid>zwave</pid>
    <!-- Binding type: protocol, ui -->
    <type>protocol</type>
    <!-- Author -->
    <author>Jan-Willem Spuij</author>
    <!-- Current version of the binding to which the file is applicable -->
    <version>1.3.0</version>
    <!-- Minimum version of openHAB required to run this binding -->
    <oh_version>1.3.0</oh_version>

    <!-- Binding configuration settings -->
    <binding.config>
        <config.setting>
            <name>port</name>
            <label>Port</label>
            <description>The location of the Z-Wave interface stick.</description>
            <optional>false</optional>
            <defaultvalue></defaultvalue>
            <minimum></minimum>
            <maximum></maximum>
            <values></values>
        </config.setting>
        <config.setting>
            <name>healtime</name>
            <label>Heal Time</label>
            <description>The hour to perform the daily network heal.</description>
            <optional>true</optional>
            <defaultvalue>-1</defaultvalue>
            <minimum>0</minimum>
            <maximum>23</maximum>
            <values></values>
        </config.setting>
        <config.setting>
            <name>setSUC</name>
            <label>Enable SUC Mode</label>
            <description>Set as true to enable Static Update Controller mode</description>
            <optional>true</optional>
            <defaultvalue>false</defaultvalue>
            <minimum>0</minimum>
            <maximum>1</maximum>
            <values></values>
        </config.setting>
        <config.setting>
            <name>softReset</name>
            <label>Enable soft reset</label>
            <description>Perform a soft reset on the controller during a heal</description>
            <optional>true</optional>
            <defaultvalue>false</defaultvalue>
            <minimum>0</minimum>
            <maximum>1</maximum>
            <values></values>
        </config.setting>
        <config.setting>
            <name>masterController</name>
            <label>OpenHAB is Master</label>
            <description>Sets openHAB as the master controller within the network so that it receives notifications etc from devices.</description>
            <optional>true</optional>
            <defaultvalue>false</defaultvalue>
            <minimum>0</minimum>
            <maximum>1</maximum>
            <values></values>
        </config.setting>
    </binding.config>

    <!-- Item binding configuration -->
    <binding.items>
        <binding.io>
        </binding.io>
    </binding.items>
</binding>

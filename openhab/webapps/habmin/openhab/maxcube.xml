<!-- Binding configuration for the MaxCube binding in openHAB -->
<binding>
        <!-- Full name presented to the user -->
        <name>MaxCube Binding</name>
        <!-- PID name used within the OSGi layer -->
        <pid>maxcube</pid>
        <!-- Binding type: protocol, ui -->
        <type>protocol</type>
        <!-- Author -->
        <author>Andreas Heil (info@aheil.de)</author>
        <!-- Current version of the binding to which the file is applicable -->
        <version>1.4.0</version>
        <!-- Minimum version of openHAB required to run this binding -->
        <oh_version>1.4.0</oh_version>

    <!-- Binding configuration settings -->
    <binding.config>
        <config.setting>
            <name>ip</name>
            <label>MaxCube IP</label>
            <description>MAX!Cube LAN gateway IP address</description>
            <optional>true</optional>
            <defaultvalue></defaultvalue>
            <minimum></minimum>
            <maximum></maximum>
            <values></values>
        </config.setting>
        <config.setting>
            <name>port</name>
            <label>Network Port</label>
            <description>MAX!Cube port (Optional, default to 62910).</description>
            <optional>true</optional>
            <defaultvalue>62910</defaultvalue>
            <minimum>1</minimum>
            <maximum>65535</maximum>
            <values></values>
        </config.setting>
        <config.setting>
            <name>refreshInterval</name>
            <label>Refresh Interval</label>
            <description>MAX!Cube refresh interval in ms (Optional, default to 10000)</description>
            <optional>true</optional>
            <defaultvalue>10000</defaultvalue>
            <minimum>1</minimum>
            <maximum>65535</maximum>
            <values></values>
        </config.setting>

    </binding.config>

    <!-- Item binding configuration -->
    <binding.items>
        <binding.io>
        </binding.io>
    </binding.items>
</binding>


